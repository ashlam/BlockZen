.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  box-sizing: border-box;
}

.page-width {
  width: calc(750rpx - 48rpx);
  max-width: 100%;
}

.title-area {
  margin-bottom: 96rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 80rpx;
  font-weight: bold;
  color: #5a3e2b;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.subtitle {
  display: block;
  font-size: 32rpx;
  color: #8d6b51;
  letter-spacing: 4rpx;
}

.menu {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.menu-btn {
  width: 100%;
  padding: 32rpx 48rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.15);
  transition: all 0.2s;
  box-sizing: border-box;
}

.menu-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.menu-btn.primary {
  background: #5a7a3e;
  color: #fff;
}

.menu-btn.secondary {
  background: #4a6fae;
  color: #fff;
}

.btn-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.btn-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.footer {
  position: absolute;
  bottom: 48rpx;
}

.version {
  font-size: 24rpx;
  color: rgba(0,0,0,0.3);
}
